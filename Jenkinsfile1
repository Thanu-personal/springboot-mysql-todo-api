pipeline {
    agent any

    environment {
        DOCKER_HUB_USERNAME = credentials('swayaanthanu')
        DOCKER_HUB_PASSWORD = credentials('Ilovepinky@123')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Package') {
            steps {
                withMaven(maven: 'MavenInstallationName') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def imageTag = "your-image-name:tag"
                    docker.build(imageTag, '.')
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://hub.docker.com/repository/docker/swayaanthanu/springboot-todo-api-jenkins1', DOCKER_HUB_USERNAME, DOCKER_HUB_PASSWORD) {
                        def imageTag = "swayaanthanu/springboot-todo-api-jenkins1:1.0"
                        docker.image(imageTag).push()
                    }
                }
            }
        }
    }
}
