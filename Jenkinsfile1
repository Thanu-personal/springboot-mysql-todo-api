pipeline {
    agent any

    environment {
        DOCKER_HUB_USERNAME = credentials('swayaanthanu')
        DOCKER_HUB_PASSWORD = credentials('Ilovepinky@123')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo 'successful checkout'
            }
        }

        stage('Build and Package') {
            steps {
                withMaven(maven: 'Maven') {
                    sh 'mvn clean package'
                  echo 'successful Build and Package'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def imageTag = "swayaanthanu/springboot-todo-api-jenkins1:1.0"
                    docker.build(imageTag, '.')
                    echo 'successful Build Docker Image'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_HUB_USERNAME, DOCKER_HUB_PASSWORD) {
                        def imageTag = "swayaanthanu/springboot-todo-api-jenkins1:1.0"
                        docker.image(imageTag).push()
                        echo 'successful Push to Docker Hub'
                    }
                }
            }
        }
    }
}
